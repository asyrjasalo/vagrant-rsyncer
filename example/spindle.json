{
  "paths": [
    {
      "source": {
        "path": "files",
        "excludes": [
          "excluded_file.txt",
          "directory/excluded_directory",
          "*glob_excluded_file*",
          "*glob_excluded_directory"
        ],
        "initial": true,
        "continuous": true,
        "listener": {
          "latency": 0.1
        }
      },
      "target": {
        "path": "/home/vagrant/files",
        "user": "vagrant",
        "group": "vagrant",
        "permissions": {
          "user": "rwX",
          "group": "rX",
          "other": ""
        },
        "args": {
          "rsync": ["--archive", "--delete", "--force"],
          "ssh": ["-o StrictHostKeyChecking=no", "-o UserKnownHostsFile=/dev/null"]
        }
      }
    }
  ]
}
